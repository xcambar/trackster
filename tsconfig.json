{
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "compilerOptions": {
    "lib": ["ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,

    // Vite takes care of building everything, not tsc.
    "noEmit": true
  }
}
