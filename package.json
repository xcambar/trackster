{
  "name": "trackster-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/@xcambar/*"
  ],
  "scripts": {
    "build": "pnpm --filter @xcambar/trackster-app build",
    "dev": "pnpm --filter @xcambar/trackster-app dev",
    "dev:functions": "pnpm --filter @xcambar/trackster-netlify-functions dev",
    "lint": "pnpm --filter @xcambar/trackster-app lint",
    "start": "pnpm --filter @xcambar/trackster-app start",
    "typecheck": "pnpm --filter @xcambar/trackster-app typecheck",
    "test": "pnpm --filter @xcambar/trackster-app test",
    "format": "prettier --write ./packages/@xcambar/trackster-app/app",
    "db-seed": "dotenv -- run-s db:*",
    "db:flush": "dotenv -- bash -c 'psql ${SUPABASE_DB_URL} -f ./supabase/sql/flush.sql'",
    "db:migrate-schema": "npx drizzle-kit push",
    "db:hooks": "dotenv -- bash -c 'psql --set=webhook_domain=${URL} ${SUPABASE_DB_URL} -f ./supabase/sql/hooks.sql'",
    "db:gap": "tsx ./packages/@xcambar/db/cli/seed_GAP_lookup_table.ts",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "dotenv": "^17.2.0",
    "dotenv-cli": "^10.0.0",
    "netlify-cli": "^23.1.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "supabase": "^2.33.9",
    "tsx": "^4.20.3",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
